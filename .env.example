# ðŸš€ Environment Variables for Arbitrage Application
# Copy this file to .env and set your values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,http://yourdomain.com

# Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=arbitrage
DB_USER=arbitrage_user
DB_PASSWORD=your-strong-password-here
DB_HOST=postgres
DB_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Performance Settings
WORKER_COUNT=8
ASGI_WORKERS=4
MAX_CONNECTIONS=1000

# Exchange API Keys (Optional)
WALLEX_API_KEY=
LBANK_API_KEY=
RAMZINEX_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Email Settings (Optional)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True

# Sentry (Optional)
SENTRY_DSN=

# Timezone
TIME_ZONE=Asia/Tehran